{
  "manifest_version": 2,
  "name": "Simple Ad Blocker",
  "version": "1.1",
  "description": "Blocks common web, video, and popup ad sources.",
  "browser_specific_settings": {
    "gecko": {
      "id": "simple-ad-blocker@example.com",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["blocklist.js", "background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "image.png",
    "48": "image.png",
    "128": "image.png"
  }
}